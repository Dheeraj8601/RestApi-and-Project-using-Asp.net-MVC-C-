@model Shop_Management.Models.Customer
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Customer</h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="FirstName" class="mb-1"></label>
            <input asp-for="FirstName" class="form-control" id="FirstName" />
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="mb-1"></label>
            <input asp-for="LastName" class="form-control" id="LastName" />
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="mb-1"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <input asp-for="Password" class="form-control" type="hidden" />
        <div class="mb-3">
            <label asp-for="FullName" class="mb-1"></label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px">Edit</button>
        <a asp-controller="Customers" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
