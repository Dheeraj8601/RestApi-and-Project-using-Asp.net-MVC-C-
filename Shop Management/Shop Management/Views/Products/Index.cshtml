@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<div>
<div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<div class="col-6 text-end ">
    <a class="btn btn-primary" asp-controller="Products" asp-action="Create">
        <i class="bi bi-patch-plus"></i> &nbsp; Create New Product
    </a>
</div>
</div>