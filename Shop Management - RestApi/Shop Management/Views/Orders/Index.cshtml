@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
    var customers = ViewBag.Customers as Dictionary<int, string>;
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@customers[order.CustomerId]</td> 
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
