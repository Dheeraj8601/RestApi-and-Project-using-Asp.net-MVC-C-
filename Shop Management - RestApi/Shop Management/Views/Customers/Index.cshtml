@model IEnumerable<Shop_Management.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>
<div>
    <div class="col-6 text-end ">
        <a class="btn btn-primary" asp-controller="Customers" asp-action="Create">
            <i class="bi bi-patch-plus"></i> &nbsp; Create New Customer
        </a>
    </div>
    <div>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id">View</a>
                </td>

            </tr>
        }
    </tbody>
</table>
    </div>
</div>